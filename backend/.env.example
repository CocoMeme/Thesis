# Environment Configuration - Local Development
NODE_ENV=development
PORT=5000

# Database Configuration
# Get your connection string from MongoDB Atlas
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
MONGODB_URI=your_mongodb_connection_string_here

# JWT Configuration
# Generate strong, random secrets for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_jwt_secret_here
JWT_REFRESH_EXPIRE=30d

# Cloudinary Configuration (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Server Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Email Configuration (for future features)
EMAIL_FROM=noreply@gourdclassifier.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Google OAuth 2.0 Configuration
# Get these from Google Cloud Console > APIs & Credentials > OAuth 2.0 Client IDs
# Create separate credentials for web, Android, and iOS platforms
GOOGLE_CLIENT_ID=your_google_web_client_id
GOOGLE_CLIENT_SECRET=your_google_web_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback
GOOGLE_ANDROID_CLIENT_ID=your_google_android_client_id
GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id

# Google Cloud Project Configuration
GOOGLE_PROJECT_ID=your_google_cloud_project_id