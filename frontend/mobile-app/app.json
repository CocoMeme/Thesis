{
  "expo": {
    "name": "EGourd",
    "slug": "egourd",
    "scheme": "egourd",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo/egourd-high-resolution-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo/egourd-high-resolution-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "hideExpoLoadingScreen": true
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.coandrei.egourd",
      "infoPlist": {
        "NSCameraUsageDescription": "EGourd needs camera access to scan ampalaya flowers and classify gender for optimal harvest.",
        "NSPhotoLibraryUsageDescription": "EGourd needs photo library access to select ampalaya flower images for analysis.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.coandrei.egourd",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo/egourd-high-resolution-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-dev-client",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow EGourd to access your camera to scan ampalaya flowers for gender classification.",
          "microphonePermission": "Allow EGourd to access your microphone for video recording (optional)."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow EGourd to access your photos to select ampalaya flower images for classification."
        }
      ],
      "react-native-fast-tflite"
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "extra": {
      "eas": {
        "projectId": "79fa9567-ea5a-4e31-a508-d5d97117d4f8"
      },
      "apiUrl": "http://192.168.171.93:5000/api"
    }
  }
}
